<div class="container">
  <div class="row">
   <% @posts.each do |post| %>
   <div class="col s8">
    <div class="card">
      <div class="card-image">
        <img src="<%= post.capa %>">
        <%= link_to post.titulo, post, class: 'card-title'%>
      </div>
      <div class="card-content">
        <p><%= post.resumo %></p>
      </div>
      <div class="card-action">
        <%= link_to 'READ MORE', post_path(post) %>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>