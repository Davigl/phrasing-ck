
<div class="hide-on-med-and-down">
	<div class="container">
		<div class="row">
			<div class="col s12 center">
				<div class="card">
					<div class="post-margin">
						<div>
							<h5 class="center titulo"> <%= phrase(@post.titulo,@post) %></h5>
						</div>
						<% if (@post.video.include? "youtube.com/embed/") %>
						<div class="video-container margem">
							<iframe width="853" height="480" src="<%= @post.video %>" frameborder="0" allowfullscreen> p</iframe>
						</div>
						<% else %>
						<div>
							<img class="materialboxed" src="<%= @post.capa %>">
						</div>
						<% end %>
						<div class="justificar">
							<%= phrase(@post.descricao,@post) %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="hide-on-large-only ">
	<div class="row">
		<div class="col s12 center">
			<div class="post-margin">
				<div>
					<h5 class="center titulo"> <%= phrase(@post.titulo,@post) %></h5>
				</div>
				<% if (@post.video.include? "youtube.com/embed/") %>
				<div class="video-container margem">
					<iframe width="853" height="480" src="<%= @post.video %>" frameborder="0" allowfullscreen> p</iframe>
				</div>
				<% else %>
				<div>
					<img class="materialboxed" src="<%= @post.capa %>">
				</div>
				<% end %>
				<div class="justificar">
					<%= phrase(@post.descricao,@post) %>
				</div>
			</div>
		</div>
	</div>
</div>


<script>
	$(document).ready(function() {
		var elems = document.querySelectorAll('.materialboxed');
		var options = []
		var instances = M.Materialbox.init(elems, options);
	});
</script>

