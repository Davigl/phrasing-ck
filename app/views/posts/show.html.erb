<div class="hide-on-med-and-down">
	<div class="container">
		<div class="row">
			<div class="col s12 center">
				<div class="card">
					<div class="post-margin">
						<div>
							<h5 class="center titulo"> <%= phrase(@post.titulo,@post) %></h5>
						</div>
						<div>
							<img src="<%= phrase(@post.capa,@post) %>">
						</div>
					<div class="justificar">
						<%= phrase(@post.descricao,@post) %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
